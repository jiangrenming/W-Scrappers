<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <View
        android:id="@+id/positionView"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <com.scrappersW.wiget.MyViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white_FFFFFF"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_make"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@mipmap/nav_icon_kaipiao_pressed" />
            <TextView
                android:id="@+id/txt_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发布"
                android:textColor="@color/yellow_DBB16D"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/centre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_red"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@mipmap/nav_icon_zhihuan_default" />

            <TextView
                android:id="@+id/txt_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="集中营"
                android:textColor="@color/gray_666666"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_qury"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@mipmap/nav_icon_chaxun_default" />

            <TextView
                android:id="@+id/txt_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="查询"
                android:textColor="@color/gray_666666"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlayout_merc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_merc"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@mipmap/nav_icon_person_default" />

            <TextView
                android:id="@+id/txt_merc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="用户"
                android:textColor="@color/gray_666666"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout> 
